<div class='outer-vertical-align-50'>
  <div class='middle-vertical-align'>
    <div class="row">
      <div class="large-6 large-centered columns">
        <div class="signup-panel">
          <h1 class="welcome text-center"> Login to MSDCC</h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><%= fa_icon "user" %></span>
            </div>
            <div class="small-10  columns">
              <%= f.email_field :email, autofocus: true, placeholder: "email" %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-2 columns">
              <span class="prefix"><%= fa_icon "lock" %></span>
            </div>
            <div class="small-10  columns">
              <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
            </div>
          </div>
          <div class="row collapse">
            <div class="small-10 columns ">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
          <%= f.submit "Log in", class: 'button radius' %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>