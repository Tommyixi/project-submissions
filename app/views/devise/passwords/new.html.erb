<div class='outer-vertical-align-50'>
  <div class='middle-vertical-align'>
    <div class="row">
      <div class="large-6 large-centered columns">
        <div class="signup-panel">
          <h1 class="welcome text-center"> Forgot your password?</h1>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
          <div class="row collapse">
            <div class="small-2  columns">
              <span class="prefix"><%= fa_icon "user" %></span>
            </div>
            <div class="small-10  columns">
              <%= f.email_field :email, autofocus: true, placeholder: "Enter Email" %>
            </div>
          </div>
          <%= f.submit "Send me reset password instructions", class: 'button radius' %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
