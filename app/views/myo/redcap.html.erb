<%= render 'layouts/myo_navbar' %>

<div id="myo">
	<div class="row margin-top">
	  <div class="large-12 columns">
	    <div class="callout panel radius text-center">
	      <h1>Redcap Data</h1>
	      <% if @data[0] %>
	      	<%= link_to "download redcap data", '/myo/download_redcap_data.csv', :method=> :post %>
	      <% end %>
	    </div>
	  </div>
	</div>

<% if @data[0] %>
	<div class="row">
		<table class="tablesorter radius" id="redcap_data">
		  <thead>
		    <tr>
		    	<% @data[0].each do |row| %>
		    		<th class='small'><%= row%></th>
		      <% end %>
		    </tr>
		  </thead>
			<tbody>
		  	<% @data.drop(1).each  do |row| %>
	    		<tr>
	    			<% row.each do |item| %>
		      			<td><%= item %></td>
		      	<% end %>
	    		</tr>  
	    	<% end %>    	   	    	    	   	
		  </tbody>
		</table>
	</div>		
<% else %>
	<div class='row'>
		<div class='small-12 columns text-center'> 
			<span>No data to display</span>
		</div>
	</div>
<% end %>
</div>