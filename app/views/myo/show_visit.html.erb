<div id="myo">
	<div class="row margin-top">
	  <div class="large-12 columns">
	    <div class="callout panel radius text-center">
	      <h1>Track Myo Upload Files</h1>
	    </div>
	  </div>
	</div>

<% @myo_files.each do |p| %>
<div class='row' id= <%= p.id %>>
	  <%= image_tag p[:file] %>
	  <%= link_to "Delete File", controller: "myo", action: "delete_file" , remote: true, params: {image_id: p.id} %>
	  <br>
</div>
	<% end %>	

<div class='row'>
	<%= form_for @visit, :html => { :multipart => true }, url: {action: "update_visit", params: {id: @visit.id}} do |f| %>
			<label>Visit Date
				<%= f.date_field :visit_date %>
			</label>		
		<%= f.fields_for :myo_files do |p| %>
			<label> Visit Files
				<%= p.file_field :file, multiple: true, name: "myo_files[file][]" %>
			</label>
		<% end %>
	<%= f.submit "Upload Files", class: "button radius small-12 columns" %>
	<% end %>
</div>

