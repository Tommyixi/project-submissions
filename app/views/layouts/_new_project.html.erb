<div class="row">
  <div class="small-12 columns text-center">
    <h2> Upload a new project </h2>    
  </div>  
</div>

<%= form_for(@project, remote: true) do |f| %>
  <div class="row">
    <div class="large-6 columns">
      <small>Required</small>
      <div class="row collapse prefix-radius">
        <div class="small-3 columns">
          <span class="prefix">Principle Investigator</span>
        </div>
        <div class="small-9 columns">
            <%= f.text_field :author, placeholder: 'e.g. Jorge Oksenberg', required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-6 columns">
    <small>Required</small>
      <div class="row collapse prefix-radius">
        <div class="small-3 columns">
          <span class="prefix">Project Title</span>
        </div>
        <div class="small-9 columns">
            <%= f.text_field :title, placeholder: 'e.g. Study of MS Genetics Susceptibility', required: true %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Project Description <small>required</small>
        <%= f.text_area :project_description, placeholder: 'A description of what the project is', required: true %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Data Description <small>required</small>
        <%= f.text_area :data_description, placeholder: 'Briefly describe which datasets that you intend to use', required: true %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <label>Data Frequency <small>required</small>
        <%= f.text_area :data_frequency, placeholder: 'If you will need more than one data extraction, please describe here', required: true %>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <small> This is a simple captcha to prevent spambots from filling the site.</small> 
      <%= f.label :humanizer_answer, @project.humanizer_question %>
      <%= f.text_field :humanizer_answer, required: true %>
      <%= f.hidden_field :humanizer_question_id %>
    </div>
  </div>



  <div class="row">
    <div class="large-12 columns">
      <%= f.submit 'Submit', :class => 'button radius' %>
    </div>
  </div>

  <a class="close-reveal-modal" aria-label="Close">&#215;</a>

<% end %>