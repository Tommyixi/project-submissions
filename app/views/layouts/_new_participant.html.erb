<div id='myo'>
  <div class="row">
    <div class="small-12 columns text-center">
      <h2> Add a new participant </h2>    
    </div>  
  </div>

  <%= form_for @participant , remote: true, url: {action: "create", params: {id: @participant.id}} do |f| %>   
    <label> TracMS Myo ID
      <%= f.text_field :tracms_myo_id %>
    </label>    
    <label>Participant's Name
      <%= f.text_field :name %>
    </label>
    <label>Exam Date
      <%= f.date_field :scheduled_date %>
    </label>
    <label> Was this a Myo Visit?
      <%= f.check_box :myo_visit %>
    </label>
    <label>Redcap Completed?
      <%= f.check_box :redcap_intake_q %>
    </label>    
    <%= f.submit "Add Participant" , class: 'button radius right small-12 columns' %>
  <% end %>
</div>