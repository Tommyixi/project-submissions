<%= render 'layouts/navbar' %>

<div id="msdr-theme">
		<div class="row margin-top">
		  <div class="large-12 columns">
		    <div class="panel radius text-center">
		      <h1>MSDCC Sysadmin</h1>
		    </div>
		  </div>
		</div>

	<div class='row'>
		<div class='small-12 columns'>
			<%= link_to "Index of Pages", sysadmin_index_path, class: "right" %>
		</div>
	</div>

	<div class='row'>
		<div class='small-12 columns'>
			<%= form_for @sysadmin do |f| %>
				<%= f.text_field :title%>
				<%= f.text_area :content, :class => "wysiwyg" %>
				<br>
				<%= f.submit 'Save', :class => 'button radius right' %>
			<% end %>
		</div>
	</div>
</div>



	<script>
	$(function() {
		$('.wysiwyg').froalaEditor();
	});
</script>